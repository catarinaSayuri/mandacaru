    <!-- Título da aba do navegador -->
       <link rel="icon" href="/assets/icon_title.png" type="image/x-icon">
    <title>Cultura | Mandacaru</title>

    <!-- Estilos específicos dessa página -->
    <link rel="stylesheet" href="/css/culturaStyle.css" />
    <!-- Estilos do cabeçalho compartilhado com outras páginas -->
